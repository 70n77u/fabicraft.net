---
import { Picture } from "astro:assets";
import backgroundImage from "../assets/banner.png";
---

<Picture
    class="splashBackgroundImage"
    src={backgroundImage}
    formats={["avif", "webp"]}
    fallbackFormat="jpg"
    alt=""
/>

<style>
    .splashBackgroundImage {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        z-index: -999;
        mask-image: linear-gradient(
            to bottom,
            rgba(0, 0, 0, 1),
            rgba(0, 0, 0, 0)
        );
    }
</style>
